      .button {
        background-color: #bc681a;
        width: 9rem;
        color: #fdfdfd;
        
        padding: 15px 30px;
        border-radius: 30px;
        margin: 0 10px;
        cursor: pointer;
        font-size: 18px;
        text-decoration: none;
        transition: 0.3s ease-in-out;
        font-weight: 700;
        position: relative;
        overflow: hidden;
        z-index: 1;
        transition:  0.4s ease-in-out;
      }
      .button::before{
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 0%;
        background-color: #fdfdfd;
        color: #bc681a;
        content: '';
        z-index: -1;
        transition:  0.3s ease-in-out;
        border-radius: 30px;
      }

      .button:hover{
        color: #bc681a;
        
        background-color: #fdfdfd;
      }

      .button:hover::before{
        width: 100%;
        
      }

      p {
        color: rgba(255, 255, 255, 0.579);
        position: absolute;
        bottom: 40px;
      }

      a{
        text-decoration: none;
        color: rgba(255, 255, 255, 0.8);
      }


      @media screen and (max-width: 600px) {
        .container {
          padding: 50px 10px;
        }
        h1 {
          font-size: 28px;
        }
      }

      @media screen and (max-width: 414px) {
        .container {
          padding: 50px 10px;
        }
        h1 {
          font-size: 28px;
        }
      }

      @media screen and (max-width: 430px) {
        nav .title {
          font-size: 15px;
        }

        nav .pages {
          width: 8rem;
          display: none;
        }
      }
      @media screen and (max-width: 414px) {
        nav .title {
          font-size: 15px;
        }

        nav .pages {
          width: 8rem;
          display: none;
        }
      }

      @media screen and (max-width: 380px) {
        .button {
          width: 7rem;
          font-size: 12px;
        }
      }

      .msgBox {
        height: 2rem;
        padding: 2rem 4rem;
        background-color: rgb(0, 248, 62);
        position: fixed;
        top: 4rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        background: rgba(0, 0, 0, 0.2);
        backdrop-filter: blur(8px);
        border-radius: 10px;
        color: white;
        transition: 0.3s ease-in-out;
        z-index: 99;
      }

      .overlay{
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        color: #f0f0f0;
        display: flex;
        gap: 1rem;
        z-index: 99;
      }

      .circle{
        background-color: #bc681a;
        color: #fdfdfd;
        height: 4rem;
        width: 4rem;
        padding: 1rem;
        border-radius: 50%;
        transition: 0.3s ease-in-out;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .circle:hover{
        background-color: #fdfdfd;
        color: #bc681a;
      }

      .circle i {
        font-size: 2rem;
      }

     
    </style>
  </head>
  <body>
    <div class="overlay">
      <a href="mailto:ronakbhojayya@gmail.com"><div class="circle"><i class="fa-solid fa-envelope"></i></div></a>
